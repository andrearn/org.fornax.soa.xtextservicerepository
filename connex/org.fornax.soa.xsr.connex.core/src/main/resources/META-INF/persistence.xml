<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="ConnexCoreUnit">
		<jta-data-source>jdbc/XSR_DB</jta-data-source>
		<class>org.fornax.soa.xsr.connex.core.config.RepositoryDescription</class>
		<class>org.fornax.soa.xsr.connex.core.user.User</class>
		<class>org.fornax.soa.xsr.connex.core.user.Role</class>
		<class>org.fornax.soa.xsr.connex.core.subscription.Subscription</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
		</properties>
	</persistence-unit>
</persistence>
